<h1>Signup for an Activity</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>


<%= form_for @signup do |f| %>
  <%= f.label :time %>
  <%= f.number_field :time %>
  <%= f.label :camper_id, "Funky camper" %>
  <%= f.collection_select :camper_id, @campers, :id, :name %>
  <%= f.label :activity_id %>
  <%= f.collection_select :activity_id, @activities, :id, :name %>
  <%= f.submit %>
<% end %>