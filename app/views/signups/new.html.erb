<%= form_for @signup do |f|%>

<% if flash[:errors] %>
  <% flash[:errors].each do |msg|%>
  <p><%= msg %></p>
  <% end %>
<% end %>


  <%= f.label :time%>
  <%= f.number_field :time%>

  <%= f.label :camper_id%>
  <%= f.collection_select :camper_id, @campers, :id, :name%>

  <%= f.label :activity_id%>
  <%= f.collection_select :activity_id, @activities, :id, :name%>

  <%= f.submit%>
<% end %>